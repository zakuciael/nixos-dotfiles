{
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nixd",
    "nix.serverSettings": {
        "nixd": {
            "formatting": {
                "command": ["alejandra"],
            },
            "nixpkgs": {
                "expr": "import <nixpkgs> { }"
            },
            "options": {
                "nixos": {
                    "expr": "(builtins.getFlake (builtins.toString ./.)).nixosConfigurations.${builtins.replaceStrings [\"\\n\"] [\"\"] (builtins.readFile \"/etc/hostname\")}.options",
                },
                "flake-parts-global-options": {
                    "expr": "(builtins.getFlake (builtins.toString ./.)).debug.options"
                },
                "flake-parts-current-system-options": {
                    "expr": "(builtins.getFlake (builtins.toString ./.)).currentSystem.options"
                }
            }
        }
    },
    "[nix]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "kamadorueda.alejandra",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": false
    },
    "cSpell.language": "en,pl,en-US",
    "cSpell.enableFiletypes": [
        "markdown",
        "nix",
        "yaml",
        "yml"
    ],
    "cSpell.words": [
        "aarch",
        "appimage",
        "builtins",
        "controlvault",
        "dbus",
        "fetchurl",
        "fetchzip",
        "Genshin",
        "Gitea",
        "glfw",
        "hexpluglib",
        "hicolor",
        "httpie",
        "imhex",
        "libdecor",
        "libwayland",
        "libxkbcommon",
        "mbedtls",
        "nixos",
        "nixpkgs",
        "nlohmann",
        "Patchelf",
        "pkgs",
        "pname",
        "Runpaths",
        "stdenv",
        "swaync",
        "swaynotificationcenter",
        "Wolv",
        "yara",
        "zakuciael"
    ],
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "#fff",
            "backgroundColor": "#ffbd2a",
            "overviewRulerColor": "rgba(255,189,42,0.8)"
        },
        {
            "text": "FIXME",
            "color": "#fff",
            "backgroundColor": "#f06292",
            "overviewRulerColor": "rgba(240,98,146,0.8)"
        }
    ],
    "todohighlight.include": [
        "**/*.txt",
        "**/*.md",
        "**/*.nix",
        "**/*.{yml,yaml}"
    ],
    "nix.hiddenLanguageServerErrors": [
        "textDocument/definition"
    ]
}